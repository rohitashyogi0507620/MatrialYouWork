<?xml version="1.0" encoding="utf-8"?>
<resources >


    <style name="TextStyleTopHeading">
        <item name="android:textSize">@dimen/OurProducts_textsize</item>
        <item name="android:textColor">@color/colortext_top_products_heading</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="EditTextStyleOutline" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="shapeAppearanceOverlay">
            @style/ShapeAppearanceOverlay.MyApp.TextInputLayout.Rounded
        </item>
        <item name="boxStrokeWidth">@dimen/border_1dp</item>
        <item name="boxStrokeColor">@color/color_border_line_edittext</item>
        <item name="hintTextColor">@color/hint_color_editext</item>

    </style>

    <style name="ShapeAppearanceOverlay.MyApp.TextInputLayout.Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/bnt_8dp_padding</item>
    </style>

    <style name="EditTextStyleNormal" parent="TextAppearance.AppCompat">
        <item name="android:padding">@dimen/margin_15dp</item>
        <item name="cornerRadius">@dimen/bnt_8dp_padding</item>
        <item name="android:textColor">@color/color_edittext_color</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">@dimen/editext_txt_size</item>
    </style>

    <style name="RadioButton_Gender_Style" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:background">@drawable/radiobutton_background</item>
        <item name="buttonTint">@color/radiobutton_color</item>
        <item name="android:paddingEnd">@dimen/margin_10dp</item>
        <item name="android:paddingStart">@dimen/margin_10dp</item>
        <item name="android:paddingTop">@dimen/margin_12dp</item>
        <item name="android:paddingBottom">@dimen/margin_12dp</item>
        <item name="android:textColor">@color/radiobutton_textcolor</item>
        <item name="android:button">@drawable/radiobutton_insert</item>
        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">@dimen/radiobutton_text_size</item>

    </style>


    <style name="Button.Round.Style" parent="Widget.MaterialComponents.Button">
        <item name="android:padding">@dimen/button_padding_12dp</item>
        <item name="cornerRadius">@dimen/button_corner_8dp</item>
        <item name="android:textSize">@dimen/button_textsize_14sp</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>

    </style>

    <dimen name="button_padding_12dp">12dp</dimen>
    <dimen name="button_corner_8dp">8dp</dimen>
    <dimen name="button_textsize_14sp">14dp</dimen>
</resources>